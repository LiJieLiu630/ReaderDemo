<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe8ff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTabBg"
        android:orientation="vertical">

        <!--app:tabBackground="@drawable/ripple_tab_bg"-->
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_gank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabBackground="@drawable/white_bg"
            app:tabIndicatorColor="@color/colorTabLine"
            app:tabSelectedTextColor="@color/colorTabTextCheck"
            app:tabTextColor="@color/colorTabTextNormal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3" />

    <widget.NoSlideViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></widget.NoSlideViewPager>

</LinearLayout>