<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liulije.readerdemo.book.activity.FilterCategory_Book_Activity">

    <include layout="@layout/item_title_back" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        zhy:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        zhy:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_list_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
